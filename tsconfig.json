{
    "extends": ["@tsconfig/node-lts/tsconfig"],
    "include": ["./*", "./electron/**/*", "./gulp/**/*"],
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "noEmit": true,
        "resolveJsonModule": true,

        // remove when comfortable
        "strict": false
    }
}
